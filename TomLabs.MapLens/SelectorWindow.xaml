<Window
	x:Class="TomLabs.MapLens.SelectorWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:TomLabs.MapLens"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="SelectorWindow"
	Width="{Binding SelectorWidth, Mode=OneWayToSource, FallbackValue=400, UpdateSourceTrigger=PropertyChanged}"
	Height="{Binding SelectorHeight, Mode=OneWayToSource, FallbackValue=400, UpdateSourceTrigger=PropertyChanged}"
	AllowsTransparency="True"
	Background="Transparent"
	BorderBrush="Black"
	BorderThickness="2"
	IsHitTestVisible="True"
	Left="{Binding SelectorLeft, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"
	MouseDown="Window_MouseDown"
	ResizeMode="CanResizeWithGrip"
	Top="{Binding SelectorTop, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"
	Topmost="True"
	WindowStartupLocation="CenterScreen"
	WindowStyle="None"
	mc:Ignorable="d">
	<Grid>
		<Rectangle
			Width="100"
			Height="10"
			VerticalAlignment="Top"
			Fill="Black" />
		<Rectangle
			Width="15"
			Height="15"
			VerticalAlignment="Bottom"
			HorizontalAlignment="Right"
			Fill="Black" />
	</Grid>
</Window>
